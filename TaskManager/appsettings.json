{
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER_NAME;Database=YOUR_SQL_NAME;Uid=YOUR_LOGIN;Pwd=YOUR_PASSWORD_SQL;Charset=utf8mb4;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NotificationSettingsModel": {
    "ReminderLeadHours": 72, // – how many hours before the task deadline should you start sending reminders
    "ResendIntervalMinutes": 180, //– the minimum interval (in minutes) between repeated reminders for the same task while it remains uncompleted.
    "CheckIntervalMinutes": 100, //– at what interval (in minutes) the background service repeatedly starts a new cycle of checking all “reminder-matching” tasks.
    "StartHour": 9, //-beginning of the working day
    "EndHour": 19 //-end of the working day
  },
  "AllowedHosts": "*",
  "TelegramBotURL": "YOUR_LINK_BOT",
  "TelegramTokenBot": "YOUR_TOKEN_BOT",
  "UrlSite": "YOUR_DOMAIN"
}